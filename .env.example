# PHP Site Monitor - Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DB_HOST=mysql
DB_NAME=site_monitor
DB_USER=monitor_user
DB_PASS=secure_password

# Application Configuration
APP_ENV=development
APP_DEBUG=true

# Session Configuration
SESSION_LIFETIME=86400

# Monitoring Configuration
DEFAULT_CHECK_INTERVAL=300
DEFAULT_SSL_CHECK_INTERVAL=86400

# Security
# Generate a random string for session security
APP_SECRET=your-random-secret-key-here

# Email Configuration (for future notifications)
# MAIL_HOST=smtp.example.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-email-password
# MAIL_ENCRYPTION=tls

# Logging
LOG_LEVEL=info

# Docker MySQL Root Password (for phpMyAdmin access)
MYSQL_ROOT_PASSWORD=root_password
